{
	"version": "1.0.1",
	"title": "Anatole theme",
	"description": "A minimalistic two-column Hugo theme, customized for Micro.blog.",
	"fields": [
		{
			"field": "params.description",
			"label": "Description",
			"placeholder": "Description/Subtitle for your blog"
		},		
		{
			"field": "params.twitter",
			"label": "Twitter",
			"placeholder": "Your Twitter username"
		},
		{
			"field": "params.github",
			"label": "GitHub",
			"placeholder": "Your GitHub username"
		},
		{
			"field": "params.instagram",
			"label": "Instagram",
			"placeholder": "Your Instagram username"
		},
		{
			"field": "params.microblog",
			"label": "Micro.blog",
			"placeholder": "Your Micro.blog username"
		},
		{
			"field": "params.linkedin",
			"label": "LinkedIn",
			"placeholder": "Your LinkedIn username"
		},
		{
			"field": "params.mastodon",
			"label": "Mastodon",
			"placeholder": "Your Mastodon profile url (including instance)"
		},
		{
			"field": "params.favicon",
			"label": "Favicon Path",
			"placeholder": "Path to the favicon to be used"
		},
		{
			"field": "params.doNotLoadAnimations",
			"label": "Disable animations on the page loads",
			"type": "boolean"
		},
		{
			"field": "params.fullPostContent",
			"label": "Display full post content on Homepage",
			"type": "boolean"
		}
	]	
}
